<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Edit <%= @site.name %></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <%= render partial: "installation", locals: { site: @site } %>
        </div>
    </div>

    <%= form_for(:site, url: site_path(@site), html: { method: :patch }) do |f| %>
        <div class="row">
            <div class="col-xs-12">
                <%= errors_for(@site) %>
            </div>
        </div>

        <%= render "form", f: f %>

        <div class="row">
            <div class="col-sm-2">
                <%= link_to 'Delete This Site', @site, method: :delete, class: "btn btn-danger btn-block", data: { confirm: 'Are you sure you want to delete this site and all associated data?' } %>
            </div>

            <div class="col-sm-2 col-sm-offset-8">
                <%= f.submit class: "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
</div>