<h1 class="page-header text-center">Get Started With <%= t("branding.site_name") %></h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= errors_for(resource) %>

      <div class="well well-sm">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="well well-sm">
        <div class="row">
          <div class="form-group col-xs-6">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group col-xs-6">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <% if @minimum_password_length %>
          <span class="help-block"><span class="fa fa-info-circle"></span> Password must be at least <%= @minimum_password_length %> characters.</span>
        <% end %>

      </div>

      <div class="row">
        <div class="col-xs-7 col-md-8 col-lg-9">
          <%= render "devise/shared/links" %>
        </div>
        <div class="col-xs-5 col-md-4 col-lg-3">
          <%= f.submit t("devise.buttons.signup"), class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
